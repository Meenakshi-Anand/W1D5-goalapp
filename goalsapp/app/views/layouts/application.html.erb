<!DOCTYPE html>
<html>
  <head>
    <title>Goalsapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
      <% if logged_in? %>
        <%= link_to "Log out", session_url, method: :delete %>
      <% else %>
        <%= link_to "Log in", new_session_url, method: :get %>
        <%= link_to "Sign up", new_user_url, method: :get %>
      <% end %>
    <%= yield %>
  </body>
</html>

<h1>New goal</h1>

<form action="/goals" method="post">
  <input type="hidden" name="authenticity_token" value="form_authenticity_token">

  <label for="name">Name: </label>
  <input type="text" name="goals[name]" value="">
  <br>

  <label for="details">Details: </label>
  <textarea name="goals[details]" rows="8" cols="80"></textarea>
  <br>

  <label for="privacy">Private: </label>
  <input type="checkbox" name="goals[privacy]" value="<%= true %>">
  <br>

  <label for="completed">Completed: </label>
  <input type="checkbox" name="goals[completed]" value="<%= true %>">
  <br>

  <input type="submit" value="Submit">
</form>
